## Default Server Block
# NGINX determines which server block to use based on matching
# the HTTP header "Host" from the request against the server_name
# directive in each server block. If no server_name directives
# match the host header, nginx chooses the default server block
server {
        listen 80 default_server;
        listen [::]:80 default_server;
        
        server_name _;
        root /var/www/html;
        
        index index.html
        location / {
                try_files $uri $uri/ =404;
        }
}


